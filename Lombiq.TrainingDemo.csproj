    <PackageReference Include="OrchardCore.ContentManagement" Version="1.0.0-beta3-70939" />
    <PackageReference Include="OrchardCore.ContentTypes.Abstractions" Version="1.0.0-beta3-70939" />
    <PackageReference Include="OrchardCore.Data.Abstractions" Version="1.0.0-beta3-70939" />
    <PackageReference Include="OrchardCore.DisplayManagement" Version="1.0.0-beta3-70939" />
    <PackageReference Include="OrchardCore.FileStorage.FileSystem" Version="1.0.0-beta3-70939" />
    <PackageReference Include="OrchardCore.Indexing.Abstractions" Version="1.0.0-beta3-70939" />
    <PackageReference Include="OrchardCore.Media.Abstractions" Version="1.0.0-beta3-70939" />
    <PackageReference Include="OrchardCore.Module.Targets" Version="1.0.0-beta3-70939" />
    <PackageReference Include="OrchardCore.ContentFields" Version="1.0.0-beta3-70939" />
  </ItemGroup>


